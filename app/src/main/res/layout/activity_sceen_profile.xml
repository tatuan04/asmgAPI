<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.SceenProfile">

        <ImageView
            android:id="@+id/img_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/hi_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_Back"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/baloothambi2regular"
            android:text="HI, Tuân"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/hi_Name"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="30sp"
            android:src="@drawable/khung_profile" />


        <ImageView
            android:id="@+id/imgAvatar_Profile"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_below="@+id/hi_Name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/anh_nguoi_dung" />

        <LinearLayout
            android:id="@+id/lin_Khung_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgAvatar_Profile"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/button_backgruod_login"
            android:orientation="vertical"
            android:padding="6sp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/in_Fullname_prof"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_people_alt_24"
                    android:drawablePadding="10dp"
                    android:hint="Nhập Fullname"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword"
                    android:id="@+id/edtFullname_prof"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/in_User_prof"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_people_alt_24"
                    android:drawablePadding="10dp"
                    android:hint="Nhập username"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword"
                    android:id="@+id/edtUser_prof"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/in_ngaysinh_prof"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_people_alt_24"
                    android:drawablePadding="10dp"
                    android:hint="Nhập ngày sinh "
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword"
                    android:id="@+id/edtngaysinh_prof"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnhoso"
                android:layout_width="200dp"
                android:layout_height="36sp"
                android:layout_marginVertical="7sp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@color/secondary"
                android:paddingLeft="10sp"
                android:text="Chỉnh sửa hồ sơ của bạn" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_PDangXuat"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_Khung_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:background="@drawable/khung_button"
            android:text="Đăng xuất" />

</RelativeLayout>